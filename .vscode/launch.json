{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug C++",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/main.exe",  // Match this with your output file in tasks.json
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,  // Launch the program in an external console
            "MIMode": "gdb",
            "miDebuggerPath": "C:/MinGW/bin/gdb.exe",  // Adjust this path if necessary
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",  // Run the build task before debugging
            "logging": { "engineLogging": true },
            "launchCompleteCommand": "exec-run"
        }
    ]
}
